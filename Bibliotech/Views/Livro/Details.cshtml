@model Bibliotech.Models.Livro

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>


<div>
    <h4>Livro</h4>
        <div class="col-sm-4">
            <img src="@Model.CapaUrl" alt="@Model.Titulo" class="img-fluid img-thumbnail" />
        </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoLancamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoLancamento)
        </dd>
    </dl>
</div>
<div>
    <a class="inter-regular btn btn-danger btn-sm btn-custom" asp-action="Delete" asp-route-id="@Model?.LivroId">Deletar</a> |
    <a class="inter-medium btn btn-primary btn-sm btn-custom" asp-action="Edit" asp-route-id="@Model?.LivroId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
