@model Bibliotech.Models.Autor

@{
    ViewData["Title"] = "Criar";
}

<h1 class="inter-bold">Adicionar novo autor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-group-custom">
                <label asp-for="Nome" class="inter-medium control-label"></label>
                <input asp-for="Nome" class="inter-medium form-control input-custom" placeholder="Insira um nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group form-group-custom">
                <label asp-for="Nacionalidade" class="inter-medium control-label"></label>
                <input asp-for="Nacionalidade" class="inter-medium form-control input-custom" placeholder="Insira uma nacionalidade" />
                <span asp-validation-for="Nacionalidade" class="inter-medium text-danger"></span>
            </div>
            <div class="form-group form-group-custom">
                <input type="submit" value="Adicionar" class="inter-medium btn btn-primary btn-sm btn-custom" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
