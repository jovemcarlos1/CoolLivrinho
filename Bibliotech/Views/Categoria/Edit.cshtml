@model Bibliotech.Models.Categoria

@{
    ViewData["Title"] = "Editar";
}

<h1 class="inter-bold">Editar categoria</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group form-group-custom">
                <label asp-for="Nome" class="inter-medium control-label"></label>
                <input asp-for="Nome" class="inter-medium form-control input-custom" />
                <span asp-validation-for="Nome" class="inter-medium text-danger"></span>
            </div>
            <div class="form-group form-group-custom">
                <input type="submit" value="Salvar" class="inter-medium btn btn-primary btn-sm btn-custom" /> |
                <a asp-action="Index">Voltar à lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
