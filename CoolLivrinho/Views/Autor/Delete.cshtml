@model Bibliotech.Models.Autor

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="inter-bold">Deletar</h1>

<h3 class="inter-medium">Tem certeza de que deseja excluir o autor?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 inter-bold">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10 inter-regular">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2 inter-bold">
            @Html.DisplayNameFor(model => model.Nacionalidade)
        </dt>
        <dd class = "col-sm-10 inter-regular">
            @Html.DisplayFor(model => model.Nacionalidade)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="inter-regular">
        <input type="hidden" asp-for="AutorId" />
        <input type="submit" value="Deletar" class="inter-regular btn btn-danger btn-sm btn-custom" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
